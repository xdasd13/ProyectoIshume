<%- include('partials/header') %>

<style>
  body, html {
    height: 100%;
    margin: 0;
  }

  .error-background {
    background: url('/images/error-bg.jpg') no-repeat center center fixed;
    background-size: cover;
    filter: blur(2px);
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .error-overlay {
    position: relative;
    background: rgba(0, 0, 0, 0.6); /* optional dark overlay */
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: 3rem;
    text-align: center;
    color: #fff;
    max-width: 600px;
    width: 90%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .error-code {
    font-size: 8rem;
    font-weight: 800;
    color: #60a5fa;
  }

  .error-message {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .btn-custom {
    background-color: #3b82f6;
    color: #fff;
    padding: 0.75rem 2rem;
    font-size: 1.1rem;
    border: none;
    border-radius: 50px;
    transition: all 0.3s ease-in-out;
  }

  .btn-custom:hover {
    background-color: #2563eb;
    transform: scale(1.05);
  }
</style>

<div class="error-background"></div>

<div class="error-overlay">
  <div class="error-card">
    <div class="error-code">404</div>
    <h2 class="mb-3">Página no encontrada</h2>
    <p class="error-message">Lo sentimos, la página que estás buscando no existe o ha sido movida.</p>
    <a href="/" class="btn btn-custom mt-3">
      <i class="bi bi-house-door"></i> Volver al inicio
    </a>
  </div>
</div>

<%- include('partials/footer') %>
