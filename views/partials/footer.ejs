<!-- CSS personalizado para efectos sutiles -->
<style>
  /* Variables de colores */
  :root {
    --primary-color: #f0ad4e; /* Un tono ámbar que funciona bien para fotografía */
  }
  
  /* Estilos para el footer */
  .footer-area {
    background: linear-gradient(to bottom, #212529, #111);
  }
  
  .text-gray-300 {
    color: #cbd3da;
  }
  
  .text-gray-400 {
    color: #adb5bd;
  }
  
  .text-gray-500 {
    color: #919aa1;
  }
  
  .bg-gray-900 {
    background-color: #111;
  }
  
  .text-primary {
    color: var(--primary-color) !important;
  }
  
  .border-primary {
    border-color: var(--primary-color) !important;
  }
  
  .btn-outline-primary {
    color: var(--primary-color);
    border-color: var(--primary-color);
  }
  
  .btn-outline-primary:hover {
    background-color: var(--primary-color);
    color: #fff;
  }
  
  /* Efectos hover suaves */
  .hover-text-white:hover {
    color: #fff !important;
    transform: translateY(-2px);
  }
  
  .transition {
    transition: all 0.3s ease;
  }
  
  /* Estilo para el formulario de newsletter */
  .newsletter .form-control {
    border-radius: 4px 0 0 4px;
    border-right: none;
  }
  
  .newsletter .form-control:focus {
    box-shadow: none;
    border-color: var(--primary-color);
  }
  
  .newsletter .btn {
    border-radius: 0 4px 4px 0;
  }
  
  /* Estilo para los iconos sociales */
  .social-icons a:hover {
    transform: translateY(-3px);
  }
  
  /* Efecto sutil en la sección de contacto */
  .contact-info li:hover i {
    transform: scale(1.2);
  }
  
  .contact-info i {
    transition: transform 0.3s ease;
  }
  
  /* Mejora en links del footer */
  .footer-links a:hover i {
    margin-right: 0.5rem;
  }
  
  .footer-links i {
    transition: margin-right 0.3s ease;
  }
</style>

